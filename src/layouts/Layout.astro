<style lang="scss">
  :root {
    --black: #000000ff;
    --oxford-blue: #14213dff;
    --orange-web: #fca311ff;
    --platinum: #e5e5e5ff;
    --white: #ffffffff;
    --purple: #4f39fa;
    --pink: #da62c4;
    --green: #38A169;
    --red: #E53E3E;
    --emphasis-gradient: linear-gradient(300deg, var(--pink), var(--purple));

    --s-5: clamp(0.33rem, 0.39rem + -0.29vw, 0.18rem);
    --s-4: clamp(0.41rem, 0.47rem + -0.31vw, 0.25rem);
    --s-3: clamp(0.51rem, 0.57rem + -0.31vw, 0.35rem);
    --s-2: clamp(0.64rem, 0.69rem + -0.27vw, 0.5rem);
    --s-1: clamp(0.8rem, 0.84rem + -0.18vw, 0.71rem);
    --s0: clamp(1rem, 1rem + 0vw, 1rem);
    --s1: clamp(1.25rem, 1.19rem + 0.32vw, 1.41rem);
    --s2: clamp(1.56rem, 1.39rem + 0.85vw, 2rem);
    --s3: clamp(1.95rem, 1.61rem + 1.7vw, 2.83rem);
    --s4: clamp(2.44rem, 1.83rem + 3.04vw, 4rem);
    --s5: clamp(3.05rem, 2.04rem + 5.07vw, 5.65rem);

    --vollkorn: 'Source Serif Pro', sans-serif;

    --color-text: hsl(12, 5%, 4%);
    --color-bg: hsl(10, 21%, 95%);
    --color-border: hsl(17, 24%, 90%);
  }

  html {
    font-family: var(--vollkorn);
    font-size: var(--s0);
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    margin: 0;
  }

  :global(h1) {
    font-size: var(--s5);
  }

  :global(h2) {
    font-size: var(--s3);
  }

  :global(h3) {
    font-size: var(--s2);
  }

  :global(i) {
    vertical-align: middle;
  }

  :global(textarea) {
    padding: var(--s-2) var(--s-4);
    border-radius: 0;
    border: 2px solid black;
    resize: none;
    margin: 0;

    &:is(:focus) {
      outline: none;
      border: 4px solid black;
      margin: -2px;
      outline-offset: 0;
    }
  }

  :global(input) {
    padding: var(--s-2) var(--s-4);
    border-radius: 0;
    border: 2px solid black;
    resize: none;
    margin: 0;

    &:is(:focus) {
      outline: none;
      border: 4px solid black;
      margin: -2px;
      outline-offset: 0;
    }
  }

  :global(button) {
    background: none;
    color: inherit;
    padding: var(--s-4) var(--s-1);
    font: inherit;
    cursor: pointer;
    margin: 0;
    outline: inherit;
    font-size: var(--s1);
    border: 2px solid black;

    &:is(:focus, :active) {
      // outline: var(--s-5) solid var(--oxford-blue);
      // outline-offset: var(--s-5);
      outline: none;
      border: 4px solid black;
      margin: -2px;
      outline-offset: 0;
    }


  }
</style>