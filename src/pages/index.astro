---
import Timeline from "../components/Timeline";
import Layout from "../layouts/Layout.astro";
---

<Layout title="daynot.es">
  <main>
    <h1>daynot.<span class="text-gradient">es</span></h1>
    <h2 class="subtitle">
      Keep track of the small things. They're worth remembering.
    </h2>
    <ul role="list" class="link-card-grid">
      <Timeline />
    </ul>
  </main>
</Layout>

<style>
  :root {
    --emphasis-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  h1 {
    margin: 1rem 0;
  }

  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--emphasis-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
  }

  .subtitle {
    line-height: 1.6;
    font-size: large;
    margin: 1rem 0;
    background: var(--oxford-blue);
    padding: 1rem;
    border-radius: 0.4rem;
    color: var(--color-bg);
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, 1fr);
    gap: 1rem;
    padding: 0;
  }
</style>